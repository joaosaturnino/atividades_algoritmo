Algoritmo "semnome"

Var
   salario,filhos,sal,p,flh:inteiro
   msal:real

Inicio

 repita
escreval (" Qual o seu salário? ")
leia (salario)
escreval (" Qual o número de filhos? ")
leia (filhos)

sal:=sal+salario
p:=p+1
msal:=sal/p
flh:=flh+filho
p:=p+1
mflh:=flh/p

ate msal=2500,00
 fimse
 escreval (" A média salarial é ", msal)

Fimalgoritmo